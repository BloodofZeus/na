modules = ["nodejs-20", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Shawarma POS Dev Server"

[[workflows.workflow]]
name = "Shawarma POS Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:full"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34447
externalPort = 4200

[[ports]]
localPort = 34953
externalPort = 3002

[[ports]]
localPort = 46877
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["npm", "run", "server"]
build = ["npm", "run", "build"]
